# Start with a base image containing Java runtime
FROM eclipse-temurin:17-jre-alpine

# Add Maintainer Info
LABEL maintainer="ignatmalouhov@gmail.com"

# Make port 8086 available to the world outside this container
EXPOSE 8080

COPY build/libs/kafka-broker-1.0-SNAPSHOT.jar kafka-broker-1.0-SNAPSHOT.jar

# Run the jar file
ENTRYPOINT ["java","-jar","/kafka-broker-1.0-SNAPSHOT.jar"]